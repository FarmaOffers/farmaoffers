<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="farmaoffers_design_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//we-select[@data-variable='header-template']/we-button[last()]" position="after">
            <we-button title="FarmaOffers Header"
                data-customize-website-views="farmaoffers_design.farmaoffers_header"
                data-customize-website-variable="'wgh_header_style_2'"
                data-img="/farmaoffers_design/static/src/img/header.png"/>
        </xpath>
        <xpath expr="//we-select[@data-variable='footer-template']/we-button[last()]" position="after">
            <we-button title="FarmaOffers Footer"
                data-customize-website-views="farmaoffers_design.farmaoffers_footer"
                data-customize-website-variable="'wgh_footer_style_2'"
                data-img="/farmaoffers_design/static/src/img/footer.png"/>
        </xpath>
    </template>
</odoo>
