    <template id="section_desc_disc">
      <section t-if="product.description or res_company.disclaimer" class="info-section-dd font-montserrat font-size-cards mb-4">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li t-if="product.description" class="nav-item">
            <a class="nav-link active text-uppercase font-weight-bold" data-toggle="tab" href="#description">Descripci칩n</a>
          </li>
          <li t-if="res_company.disclaimer" class="nav-item">
            <a t-attf-class="nav-link text-uppercase font-weight-bold #{ 'active' if not product.description else ''}" data-toggle="tab" href="#disclaimer">Disclaimer</a>
          </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content mt-2 px-3 border rounded">
          <div t-if="product.description" id="description" class="container tab-pane active"><br/>
            <p t-esc="product.description"/>
          </div>
          <div t-if="res_company.disclaimer" id="disclaimer" t-attf-class="container tab-pane #{ 'active' if not product.description else 'fade'}"><br/>
            <p t-esc="res_company.disclaimer"/>
          </div>
        </div>
      </section>
    </template>
    <template id="section_aditional_info">
      <t t-set="aditionals" t-value="product.aditional_info_ids"/>
      <section class="mb-4 pt-5" t-if="len(aditionals) &gt; 0">
        <h3 class="text-uppercase font-montserrat font-size-cards mb-0 font-weight-bold">
          <span class="text-secondary">Datos</span>
          <span class="text-primary">Adicionales</span>
        </h3>
        <hr class="mx-0 mt-1 mb-4"/>
        <div class="content-section aditional-info">
          <ul>
            <t t-foreach="aditionals" t-as="item" >
              <li class="font-montserrat font-size-cards">
                <!-- <img class="" src="/farmaoffers_design/static/src/img/icon-box.png" alt="Icon box"/> -->
                <img t-attf-src="/website/image/product.aditional.info/{{item.id}}/image" t-att-alt="item.description"/>
                <p><t t-esc="item.description" /></p>
              </li>
              <hr class="hr-aditional-info"/>
            </t>
          </ul>
        </div>
      </section>
    </template>

    <template id="section_same_compound">
      <t t-set="product_items" t-value="website.get_products_with_same_compound(product.id, product.active_compound)"/>
      <section t-if="len(product_items) &gt; 0" class="mb-4 pt-5">
        <h3 class="text-uppercase font-montserrat font-size-cards mb-0 font-weight-bold">
          <span class="text-secondary">Productos</span>
          <span class="text-primary">Con el mismo compuesto</span>
        </h3>
        <hr class="mx-0 mt-1 mb-4"/>
        <div class="content-section same-compound">
          <ul class="inner-img">
            <img src="/farmaoffers_design/static/src/img/icon-medicine.png" alt="Icon medicine"/>
          </ul>
          <ul id="ul-same-compound" class="inner-list">
            <li t-foreach="product_items" t-as="item" class="font-montserrat font-size-cards">
              <t t-set="product_href" t-value="keep(item.website_url)" />
              <a itemprop="name" t-att-href="product_href" t-att-content="item.name" t-field="item.name" />
            </li>
          </ul>
        </div>
        <div class="d-none" id="current_product_compound"><t t-esc="product.active_compound" /></div>
        <a id="show-more-with-same-compound" class="show-more font-montserrat font-size-cards" href="#" title="Desplegar m치s">Desplegar m치s</a>
        <!-- <a id="show-less-with-same-compound" class="d-none show-more font-montserrat font-size-cards" href="#" title="Desplegar menos">Desplegar menos</a> -->
      </section>
    </template>

    <template id="section_bought_together">
      <t t-set="optional_products" t-value="product.optional_product_ids"/>
      <section t-if="len(optional_products) &gt; 0" class="mb-4 pt-5">
        <section class="list-slider bought-together">
            <!-- <div class="block-title"><span>Best Sellers</span></div> -->
            <h3 class="text-uppercase font-montserrat font-size-cards mb-0 font-weight-bold">
              <span class="text-secondary">Productos</span>
              <span class="text-primary">Comprados juntos</span>
            </h3>
            <hr class="mx-0 mt-1 mb-4"/>
            <div class="owl-carousel">
              <t t-foreach="range(0, len(optional_products), 1)" t-as="step">
                <div class="item">
                  <ul class="widget-products">
                    <li t-foreach="optional_products[step:step+1]" t-as="optional_product" class="d-flex flex-column align-items-center">
                      <span class="img">
                        <img class="img-thumbnail" t-attf-src="/website/image/product.template/{{optional_product.id}}/image_512" t-att-title="optional_product.name"/>
                      </span>
                      <span class="product m-0 font-montserrat">
                        <t t-set="combination_info" t-value="optional_product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
                        <div class="price product_price mb-2" style="white-space: nowrap;">
                          <span t-if="combination_info['price']" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                          <span itemprop="price" style="display:none;" t-esc="combination_info['price']" />
                          <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name" />
                        </div>

                        <a t-att-href="'/shop/product/' + slug(optional_product)" t-att-title="optional_product.name">
                          <span class="name mb-1 d-inline-block text-uppercase font-montserrat text-primary w-100 font-weight-bold font-8-5"><t t-esc="optional_product.name"/></span>
                        </a>

                        <t t-if="len(optional_product.product_variant_ids) == 1">
                          <form action="/shop/cart/update" class="js_add_cart_variants" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                            <input name="product_id" t-att-value="optional_product.product_variant_id.id" type="hidden" />
                            <a class="add-cart-btn a-submit text-uppercase font-montserrat">Agregar al carrito</a>
                          </form>
                        </t>
                        <t t-if="len(optional_product.product_variant_ids) &gt; 1">
                          <a class="add-cart-btn text-uppercase" t-att-href="'/shop/product/%s' % slug(optional_product)">Agregar al carrito</a>
                        </t>
                      </span>
                      <div class="clearfix"/>
                    </li>
                  </ul>
                </div>
              </t>
            </div>
          </section>
      </section>
    </template>

    <template id="section_general_info">
      <t t-set="general_data" t-value="website.get_general_info_by_type(product.id)"/>
      <section t-if="len(general_data) &gt; 0" class="mb-4 pt-5">
          <h3 class="text-uppercase font-montserrat font-size-cards mb-0 font-weight-bold">
            <span class="text-secondary">Informaci칩n</span>
            <span class="text-primary">General</span>
          </h3>
          <hr class="mx-0 mt-1 mb-4"/>
          <div class="content-section">
            <ul>
              <li t-attf-id="general-info-#{item.id}" t-foreach="general_data" t-as="item" class="my-3 font-montserrat font-size-cards">
                <h4 class="font-montserrat font-size-cards text-primary text-uppercase font-weight-bold"><t t-esc="item.title" /></h4>
                <p><t t-esc="item.description" /></p>
              </li>
            </ul>
          </div>
      </section>
    </template>

    <template id="section_faqs">
    <t t-set="faqs_data" t-value="website.get_general_info_by_type(product.id, 'faq')"/>
      <section t-if="len(faqs_data) &gt; 0" class="mb-4 pt-5">
          <h3 class="text-uppercase font-montserrat font-size-cards mb-0 font-weight-bold">
            <span class="text-secondary">Preguntas</span>
            <span class="text-primary">Frecuentes</span>
          </h3>
          <hr class="mx-0 mt-1 mb-4"/>
          <div class="content-section">
            <div class="accordion font-montserrat" id="faqsAccordion">
              <div  t-foreach="faqs_data" t-as="item" class="card">
                <div class="card-header" t-attf-id="heading-#{item.id}">
                  <h2 class="mb-0">
                    <button class="btn btn-block text-left text-uppercase text-primary font-montserrat font-weight-bold font-8-5" type="button" data-toggle="collapse" t-attf-data-target="#collapse-#{item.id}" aria-expanded="true" t-attf-aria-controls="collapse-#{item.id}">
                      <t t-esc="item.title" />
                    </button>
                  </h2>
                </div>

                <div t-attf-id="collapse-#{item.id}" t-attf-class="collapse #{ 'show' if item_first else '' }" t-attf-aria-labelledby="heading-#{item.id}" data-parent="#faqsAccordion">
                  <div class="card-body font-8-5">
                    <t t-esc="item.description" />
                  </div>
                </div>
              </div>
            </div>
          </div>
      </section>
    </template>

    <template id="section_product_resume">
      <t t-set="items_resume" t-value="website.get_general_info_by_type(product.id, 'resume')"/>
      <section t-if="len(items_resume) &gt; 0 or combination_info['has_discounted_price']" class="mb-4 pt-5">
        <h3 class="text-uppercase font-montserrat font-size-cards mb-0 font-weight-bold">
          <span class="text-secondary">Resumen</span>
          <span class="text-primary">Del producto</span>
        </h3>
        <hr class="mx-0 mt-1 mb-4"/>
        <div class="content-section">
          <table class="table table-striped font-montserrat font-size-cards">
            <tbody class="font-montserrat font-8-5 font-weight-bold">
              <t t-if="combination_info['has_discounted_price']">
                <tr>
                  <th scope="row">Oferta del producto</th>
                  <td class="text-right"><t t-esc="website.currency_id.symbol"/> <t t-esc="combination_info['price']" /></td>
                </tr>
                <tr>
                  <th scope="row">Su ahorro</th>
                  <td class="text-right">
                    <span class="text-secondary">
                      <t t-esc="website.currency_id.symbol"/> <t t-esc="combination_info['list_price'] - combination_info['price']"/> - <t t-esc="100 - (combination_info['price'] * 100) /combination_info['list_price']"/>% OFF 
                    </span>
                  </td>
                </tr>
              </t>
              
              <tr t-foreach="items_resume" t-as="item">
                <th scope="row"><t t-esc="item.title"/></th>
                <td class="text-right"><t t-esc="item.description"/></td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>
    </template>

    <template id="product-sidebar">
      <t t-set="general_data" t-value="website.get_general_info_by_type(product.id)"/>
      <div t-if="len(general_data) &gt; 0" class="fo-side-list mb-4">
        <div>
          <h3 class="text-uppercase text-primary">Enlaces r치pidos</h3>
        </div>
        <ul class="nav nav-pills flex-column mb-2">
          <li t-foreach="general_data" t-as="item" class="nav-item">
            <a class="nav-link p-0 text-capitalize" t-attf-href="#general-info-#{item.id}" t-att-title="item.title"><t t-esc="item.title"/></a>
          </li>
        </ul>
      </div>
      <t t-set="product_offers" t-value="website.get_product_offers()"/>
      <div t-if="len(product_offers) &gt; 0" class="d-none d-md-block">
        <h3 class="text-uppercase text-primary font-montserrat font-weight-bold font-size-cards">Ofertas para t칤</h3>
        <hr class="m-0 mb-3"/>
        <div class="offers-for-you">
          <div class="accordion" id="accordionOffers">
            <div t-foreach="product_offers" t-as="product_offer" class="card">
              <div class="card-header p-0 d-flex align-items-center" t-attf-id="headingOffer-#{product_offer.id}">
                <h2 class="mb-0 w-100">
                  <div class="bg-secondary h6 font-weight-bold m-0 p-3 d-flex justify-content-center align-items-center">1</div>
                  <button class="btn btn-block text-left rounded-0" type="button" data-toggle="collapse" t-attf-data-target="#collapseOffer-#{product_offer.id}" aria-expanded="true" t-attf-aria-controls="collapseOffer-#{product_offer.id}">
                    <t t-esc="product_offer.title"/>
                  </button>
                </h2>
              </div>

              <div t-attf-id="collapseOffer-#{product_offer.id}" t-attf-class="collapse #{ 'show' if item_first else '' }" t-attf-aria-labelledby="headingOffer-#{product_offer.id}" data-parent="#accordionOffers">
                <div class="card-body card-body-offers">
                  <img t-attf-src="/website/image/product.offers/{{product_offer.id}}/image" t-att-alt="product_offer.title"/>
                  <p class="m-0" t-esc="product_offer.description" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </template>

    <template id="breadcrumb_fo">
      <div t-attf-class="col-12 #{classes if classes else ''}">
        <div class="shop-banner m-0">
          <h2 class="m-0 text-uppercase" t-esc="bg_title"/>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <ol class="breadcrumb bg-white px-0 mb-1">
                <li class="breadcrumb-item"><a class="text-blue" href="/">Home</a></li>
                <t t-if="breadcrumb_definition">
                  <li class="breadcrumb-item active">
                    <span t-esc="breadcrumb_definition" />
                  </li>
                </t>
                <!-- <li class="breadcrumb-item active"><span t-field="product.name" /></li> -->
              </ol>
            </div>
          </div>
        </div>
      </div>
    </template>

    <template id="extend_table_cart">
        <div class="extend-section">
            <hr class="my-5"/>
            <div class="row">
                <div class="col-12 col-xl-5">
                    <div class="coupon_form">
                        <t t-call="website_sale.coupon_form"/>
                    </div>
                </div>
                <div class="col-12 offset-xl-4 col-xl-3">
                    <t t-call="website_sale.short_cart_summary"/>
                </div>
            </div>
        </div>
    </template>

    <template id="total_f2">
        <div id="cart_total" t-att-class="extra_class or ''" t-if="website_sale_order and website_sale_order.website_order_line">
            <h5 class="h6 font-montserrat text-uppercase font-weight-bold text-black">Total del pedido</h5>
            <hr class="my-3"/>
            <table class="table">
                  <tr id="empty">
                      <t t-if='not no_rowspan'><td rowspan="10" class="border-0"/></t>
                      <td class="col-md-2 col-3 border-0"></td>
                      <td class="col-md-2 col-3 border-0" ></td>
                  </tr>
                  <tr id="order_total_untaxed">
                      <td class="text-left border-0 font-montserrat text-uppercase text-primary font-weight-bold font-8-5">Sub-total</td>
                      <td class="text-xl-right border-0" >
                          <span t-field="website_sale_order.amount_untaxed" class="monetary_field font-montserrat font-8-5 font-weight-bold" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                      </td>
                  </tr>
                  <tr t-if="website_sale_order.website_order_saving &gt; 0" id="order_total_saving">
                      <td class="text-left border-0 font-montserrat text-uppercase text-primary font-weight-bold font-8-5">Ahorro</td>
                      <td class="text-xl-right border-0 text-secondary">
                          -<span t-field="website_sale_order.website_order_saving" class="monetary_field font-montserrat font-weight-bold font-8-5" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}" />
                      </td>
                  </tr>
                  <tr id="order_total_taxes">
                      <td class="text-left border-0 font-montserrat text-uppercase text-primary font-weight-bold font-8-5">Impuesto</td>
                      <td class="text-xl-right border-0">
                            <span t-field="website_sale_order.amount_tax" class="monetary_field font-montserrat font-8-5 font-weight-bold" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}" />
                      </td>
                  </tr>
                  <tr id="order_delivery" t-if="website_sale_order and website_sale_order.carrier_id">
                      <td class="text-left border-0 font-montserrat text-uppercase text-primary font-weight-bold font-8-5"  title="Delivery will be updated after choosing a new delivery method">Costo Delivery</td>
                      <td class="text-xl-right border-0 text-muted" >
                          <span t-field="website_sale_order.amount_delivery" class="monetary_field font-montserrat font-weight-bold font-8-5" style="white-space: nowrap;" t-options='{
                              "widget": "monetary",
                              "display_currency": website_sale_order.currency_id,
                          }'/>
                      </td>
                  </tr>
                  <tr id="order_total" class="border-top">
                      <td class="text-left border-0 font-montserrat text-uppercase text-secondary font-weight-bold font-8-5">Total</td>
                      <td class="text-xl-right border-0">
                          <strong t-field="website_sale_order.amount_total" class="monetary_field text-black font-montserrat font-8-5 font-weight-bold"
                              t-options='{"widget": "monetary", "display_currency": website_sale_order.pricelist_id.currency_id}'/>
                      </td>
                  </tr>
            </table>
        </div>
    </template>

    <template id="quote">
        <t t-call="website.layout">
          <div id="wrap" class="oe_structure oe_empty">
              <div class="container-fo mx-auto my-0 py-1 basic-bg basic-bg-login">
            <section class="s_title o_colored_level pt8 pb0" data-vcss="001" data-snippet="s_title" data-name="Title">
              <div class="container s_allow_columns font-montserrat text-uppercase">
                <h1 id="top_quote" class="m-0" style="text-align: center;">
                  <font class="text-white font-weight-bold font-montserrat" style="font-size: 32px;">Cotizar productos de alto costo</font>
                </h1>
              </div>
            </section>
            <section class="s_text_block o_colored_level pb0 pt0" data-snippet="s_text_block" data-name="Text" style="">
